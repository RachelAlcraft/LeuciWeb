<script defer src="https://pyscript.net/alpha/pyscript.js"></script>

<py-env>
    - numpy
    - matplotlib
</py-env>



<div class="row">
    <div class="col-lg-12">
        <h1>plot</h1>
        <div id="plot">

        </div>
        
    </div>
</div>

<py-script output="plot">
    import matplotlib.pyplot as plt
    import numpy as np
    np.random.seed(42)
    rv = np.random.standard_normal(1000)
    fig,ax = plt.subplots()
    ax.hist(rv,bins=30)
    fig
</py-script>

